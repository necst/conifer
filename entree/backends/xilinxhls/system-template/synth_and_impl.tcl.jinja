set prj_root  [lindex $argv 0]
set prj_dir [lindex $argv 1]
set xdc_dir [lindex $argv 2]
set prj_name {{projectname}}_system
set prj_part {{XilinxPart}}
set prj_board {{XilinxBoard}}
set n_classes {{nClasses}}
set n_banks {{nBanks}}
