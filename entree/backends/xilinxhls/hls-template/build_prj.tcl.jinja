array set opt {
    reset      0
    csim       1
    synth      1
    cosim      0
    export     0
    vsynth     0
}

foreach arg $::argv {
  foreach o [lsort [array names opt]] {
    regexp "$o=+(\\w+)" $arg unused opt($o)
  }
}

file mkdir tb_data
set CSIM_RESULTS "./tb_data/csim_results.log"

if {$opt(reset)} {
    open_project -reset {{ProjectName}}_prj
} else {
    open_project {{ProjectName}}_prj
}

set_top {{ProjectName}}
add_files firmware/BDT.h -cflags "-std=gnu++14"
add_files firmware/{{ProjectName}}.cpp -cflags "-std=gnu++14"
add_files -tb {{ProjectName}}_test.cpp -cflags "-I firmware/ -std=gnu++14"
{%- if weights %}
add_files -tb firmware/weights
{%- endif %}
add_files -tb tb_data
if {$opt(reset)} {
    open_solution -reset "solution1"
} else {
    open_solution "solution1"
}

open_solution -reset "solution1"
set part {{'{%s}'|format(XilinxPart)}}
create_clock -period {{ClockPeriod}} -name default

if {$opt(csim)} {
    csim_design
}

if {$opt(synth)} {
    csynth_design
}

if {$opt(cosim)} {
    cosim_design -trace_level all
}

if {$opt(export)} {
    export_design -format ip_catalog
}

if {$opt(vsynth)} {
    puts "NOT IMPLEMENTED YET"
}
exit
